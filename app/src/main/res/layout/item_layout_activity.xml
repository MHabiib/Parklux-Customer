<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight_dp"
        android:background="@drawable/card_layout_white_dark"
        android:padding="@dimen/sixteen_dp">

        <ImageView
            android:id="@+id/iv_customer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_dp"
            android:src="@drawable/ic_phone"
            android:tint="@color/baseBlack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_customer_name" />

        <ImageView
            android:id="@+id/iv_slot"
            android:layout_width="@dimen/twenty_four_dp"
            android:layout_height="@dimen/twenty_four_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:src="@drawable/ic_my_location"
            android:tint="@color/baseBlack"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv_customer_name" />

        <ImageView
            android:id="@+id/iv_time_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clock"
            android:tint="@color/baseBlack"
            app:layout_constraintBottom_toBottomOf="@id/tv_time_range"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_time_range" />

        <ImageView
            android:id="@+id/iv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_marginBottom="@dimen/twelve_dp"
            android:src="@drawable/ic_wallet"
            android:tint="@color/baseBlack"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/iv_slot" />

        <ImageView
            android:id="@+id/iv_parking_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_parking_zone"
            android:tint="@color/baseBlack"
            app:layout_constraintBottom_toBottomOf="@id/tv_parking_zone_name"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/tv_parking_zone_name" />

        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/four_dp"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Customer Name" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/four_dp"
            android:textColor="@color/white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Status" />

        <TextView
            android:id="@+id/tv_customer_phone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/four_dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/iv_customer_phone"
            app:layout_constraintLeft_toRightOf="@id/iv_customer_phone"
            app:layout_constraintRight_toLeftOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/iv_customer_phone"
            tools:text="Customer Phone" />

        <TextView
            android:id="@+id/tv_slot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/four_dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/iv_slot"
            app:layout_constraintLeft_toRightOf="@id/iv_slot"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_slot"
            tools:text="Customer Name" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/four_dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/iv_total_price"
            app:layout_constraintLeft_toRightOf="@id/iv_total_price"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_total_price"
            tools:text="Customer Phone" />

        <TextView
            android:id="@+id/tv_time_range"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/four_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/iv_parking_zone"
            app:layout_constraintLeft_toRightOf="@id/iv_time_range"
            app:layout_constraintRight_toRightOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/iv_total_price"
            tools:text="14:45  >  20:20" />

        <TextView
            android:id="@+id/tv_parking_zone_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/four_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@id/iv_total_price"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total_price"
            tools:text="Customer Phone" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/twelve_dp"
            android:layout_marginTop="@dimen/twelve_dp"
            android:layout_marginEnd="@dimen/twelve_dp"
            android:background="@color/gold"
            app:layout_constraintTop_toBottomOf="@id/iv_parking_zone" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>